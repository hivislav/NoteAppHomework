<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/quit_fragment_layout_padding"
    tools:context=".QuitDialogFragment">

    <TextView
        android:id="@+id/quit_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_fragment_text_size"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/quit_fragment_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/quit_fragment_inside_layout_padding"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quit_button_yes"
            android:text="@string/quit_button_yes"
            style="@style/QuitButton">
        </com.google.android.material.button.MaterialButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">
        </Space>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quit_button_no"
            android:text="@string/quit_button_no"
            style="@style/QuitButton">
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>
</LinearLayout>