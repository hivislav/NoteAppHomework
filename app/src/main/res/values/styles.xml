<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="NoteHolderTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NoteHolderDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="NoteEditTitle">
        <item name="android:background">@drawable/edit_note_text_style</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical|center_horizontal|top</item>
        <item name="android:textSize">26sp</item>
        <item name="android:hint">@string/title_in_note_edit</item>
    </style>


    <style name="NoteEditDescription" parent="NoteEditTitle">
        <item name="android:layout_height">550dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:hint">@string/description_in_note_edit</item>
    </style>




</resources>