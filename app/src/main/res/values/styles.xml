<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="NoteHolderTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/note_holder_title_text_size</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NoteHolderDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/note_holder_description_text_size</item>
    </style>


    <style name="NoteEditTitle">
        <item name="android:background">@drawable/edit_note_text_style</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|center_horizontal|top</item>
        <item name="android:textSize">@dimen/note_edit_title_text_size</item>
        <item name="android:hint">@string/title_in_note_edit</item>
    </style>


    <style name="NoteEditDescription" parent="NoteEditTitle">
        <item name="android:layout_weight">9</item>
        <item name="android:textSize">@dimen/note_edit_description_text_size</item>
        <item name="android:hint">@string/description_in_note_edit</item>
    </style>

    <style name="NoteEditTitleLandscape" parent="NoteEditTitle">
        <item name="android:layout_weight">1.5</item>
    </style>



    <style name="ButtonOk">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/button_ok_width</item>
        <item name="android:layout_height">@dimen/button_ok_height</item>
        <item name="android:text">@string/button_ok</item>
    </style>


</resources>